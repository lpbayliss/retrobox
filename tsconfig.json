{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@theme/*": ["theme/*"],
      "@i18n/*": ["i18n/*"],
      "@supabase/*": ["supabase/*"],
      "@reducers/*": ["reducers/*"],
      "@redux/*": ["redux/*"],
      "@sagas/*": ["sagas/*"],
      "@selectors": ["selectors/index.ts"],
      "@api": ["api/index.ts"],
      "@actions": ["actions/index.ts"]
    },
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
